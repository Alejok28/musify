
<div class="row">
  <div class="col-sm-12">
    <% @artists.each do |artist| %>
      <div class=" col-xs-12 col-sm-6 col-md-3">
        <div class="thumbnail">
          <img src="<%= artist.image_url %>" alt="<%= artist.name %>">
          <div class="caption">
            <h3><%= artist.name %></h3>
            <%= link_to "Ver más", artist, class:"btn btn-primary btn-group btn-group-justified" %>
            <!-- <a href="artist/:id" class="btn btn-primary btn-group btn-group-justified" role="button">Ver más</a> -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
